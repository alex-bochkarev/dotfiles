import = ["/home/bochkarev/.config/alacritty/base16-gruvbox-dark-medium-256.toml"]
live_config_reload = true

[colors]
draw_bold_text_with_bright_colors = false

[cursor]
blink_interval = 500

[cursor.style]
blinking = "On"
shape = "Block"

[font]
size = 11.0

[font.normal]
family = "Iosevka"
style = "Regular"

[[keyboard.bindings]]
action = "IncreaseFontSize"
key = "Plus"
mods = "Control"

[[keyboard.bindings]]
action = "DecreaseFontSize"
key = "Minus"
mods = "Control"

[window]
decorations = "none"
opacity = 0.8

[scrolling]
history = 10000

[window.class]
general = "Alacritty"
instance = "Alacritty"

[window.padding]
x = 10
y = 5
